<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Track Your Assignment</h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Assignment name." name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Grade</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the grade you got on the Assignment. Use ' % '." name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Weight </label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the weight of the Assignment. Use ' % '." name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the type of Assignment and for which class." name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Due Date</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the due date 'yyyy/mm/dd'. " name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>